{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"indent": ["error", "tab"],

		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	},

	"globals": {
		"process": "readonly",
		"__dirname": "readonly"
	}
}
